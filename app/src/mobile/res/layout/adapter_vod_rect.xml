    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_vod_name"
        android:layout_alignStart="@id/image"
        android:layout_alignEnd="@id/image"
        android:ellipsize="marquee"
        android:textColor="@color/white_80"
        android:gravity="start"
        android:paddingTop="4dp"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:textSize="14sp"
        android:singleLine="true"
        tools:text="蜘蛛人" />

    <TextView
        android:id="@+id/remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image"
        android:layout_alignStart="@id/image"
        android:ellipsize="marquee"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:singleLine="true"
        android:textColor="@color/white_80"
        android:textSize="9sp"
        tools:text="1080p"
        tools:ignore="SmallSp" />

    <ImageView
        android:id="@+id/foreground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/image"
        android:layout_alignBottom="@id/name"
        android:foreground="@drawable/shape_vod"/>

    <FrameLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/name"
        android:layout_alignTop="@id/image"
        android:background="@color/black_60"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageButton
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_google_search"
                android:backgroundTint="@color/black_60"
                android:layout_margin="4dp"
                android:background="@drawable/shape_item_round_activated"/>
            <ImageButton
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_google_ios_share"
                android:backgroundTint="@color/black_60"
                android:layout_margin="4dp"
                android:background="@drawable/shape_item_round_activated"/>


        </LinearLayout>
    </FrameLayout>



</RelativeLayout>